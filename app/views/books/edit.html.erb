<main>
  <h1>Editing&nbsp;Book</h1>
    <%= form_with model: @book do |f| %>
      <div class="field">
        <label>Title</br>
        <%= f.text_field :title %></label>
      </div>
      <div class="field">
        <label>Body</br>
        <%= f.text_area :body %></label>
      </div>
      <div class="action">
        <%= f.submit 'Update Book' %>
      </div>
    <% end %>

  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
</main>