<main>
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>
  <h1>Books</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <tr>
    <% @books.each do |book| %>
      <td>
         <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to "Show", book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Aer you sure?" %>
      </td>
    </tr>
    <% end %>
    </table>

    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <div class="field">
        <label>Title</br>
        <%= f.text_field :title %></label>
      </div>
      <div class="field">
        <label>Body</br>
        <%= f.text_area :body %></label>
      </div>
      <div class="action">
        <%= f.submit 'Create Book' %>
      </div>
    <% end %>
</main>